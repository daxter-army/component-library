{
	"compilerOptions": {
		// Default
		"target": "es2017",
		"lib": [
			"es2015",
			"DOM"
		],
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"allowJs": true,
		// Added
		"jsx": "react",
		"module": "ESNext",
		"declaration": true,
		"declarationDir": "./",
		"sourceMap": true,
		"outDir": ".",
		"rootDir": ".",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"emitDeclarationOnly": true,
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}